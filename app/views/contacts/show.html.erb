<% provide(:page_title, "Inquiry") %>
<% provide(:contact_active, "active") %>
<div class="container">
  <div class="row justify-content-center" style="margin-top: 8vh">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-body">
          <small class="text-muted"><%= @contact.created_at.strftime("%B, %d, %Y")%></small>
          <hr class="my-2">
          <p class="lead"><%= @contact.message %></p>
          <div class="actions">
            <%= link_to 'Back', contacts_path, :class=>"btn btn-secondary" %>
            <%= link_to 'Delete', contacts_path, method: :delete, data:{confirm:'Are you sure?'}, :class=>"btn btn-warning" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
