
<%= simple_form_for(@herb) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :image_link, label: "Image URL" %>
    <%= f.input :description, input_html: {rows: 8} %>
    <%= f.input :usage, input_html: {rows: 8} %>
    <%= f.association :user, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create", :class=>"btn btn-info" %>
    <%= link_to "Back", herbs_path, :class=>"btn btn-secondary" %>
  </div>
<% end %>
